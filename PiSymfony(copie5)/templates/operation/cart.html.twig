
{% extends 'base.html.twig' %}
   
{% block body %}

    
<style>
    body {
        font-family: 'Darker Grotesque', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa; /* Light gray background */
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .checkout {
        background-color: #ffffff;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1);
        padding: 30px;
        border-radius: 10px;
        margin: 20px auto;
        text-align: center;
    }

    .total-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 30px;
        background-color: #d9f2eb; /* Light green background */
        border-radius: 10px;
        margin-top: 20px;
    }

    .subtotal,
    .shipping,
    .total {
        font-weight: 500;
        font-size: 24px;
        margin-top: 15px;
    }

    .subtotal-price,
    .shipping-price,
    .total-price {
        font-weight: 700;
        font-size: 30px;
        color: #007bff; /* Blue color for prices */
    }

    .btn-paypal {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 20px 40px;
        font-size: 24px;
        margin-top: 30px;
        cursor: pointer;
        border-radius: 5px;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1);
    }

    .btn-paypal:hover {
        background-color: #0056b3; /* Darker blue on hover */
    }
</style>


    <!-- Contact -->
    <a href="{{ path('retourToBook', {'id': fadit.eventId}) }}">
        <button style="padding: 10px; background-color: #007BFF; color: #fff; border: none; cursor: pointer;">
            Retour
        </button>
    </a>
    <section class="contact py-5">
        <div class="container py-lg-5 py-sm-3">
          
            <div class="row justify-content-center"> <!-- Center the form -->
              


                <section>
                    <div class="checkout">
                       <div class="total-card">
                        <a href="{{path('achref', {'id': fadit.id , 'prix':fadit.prixR})}}">
                            <button style="padding: 10px; background-color: #007BFF; color: #fff; border: none; cursor: pointer;">
                                use point
                            </button>
                          <span class="subtotal"> adults:</span>
                          <span class="subtotal-price">{{fadit.nbAdults}}</span>
                          <span class="shipping"> kids:</span>
                          <span class="shipping-price">{{fadit.nbKids}}</span>
                          <span class="total">total: </span>
                          <span class="total-price">{{fadit.prixR}}$</span>
                          

            
                          <form action="{{path('app_payment', {'idR': fadit.id})}}" method="post">
                        
                           <input type="hidden" name="token"  value="{{csrf_token('myform')}}">
            
                           <input type="hidden" name="amount"  value="1120.6">
            
                          <button class="btn">
                            <span style="font-weight:800; font-size:x-large">Pay with paypal</span>
                          </button>
                          </form>
                      
                       </div>
                    </div>
                </section>

            </div>
        </div>
    </section>
    
    
        </div>
    </section>
    {% endblock %}
