
{# templates/cart/index.html.twig #}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Your Cart</h1>

    {% if dataPanier is empty %}
        <p>Your cart is empty.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                {% for item in dataPanier %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.quantite }}</td>
                        <td>{{ item.produit.prixUnitaire }}$</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <p>Total: {{ total }}$</p>

        <a href="{{ path('checkout') }}">Proceed to Checkout</a>
    {% endif %}
{% endblock %}
